<div class="col-lg-10 col-md-9 ucbg-white">
  <div class="uc-inpli">
    <h2><div class="uc-r-tit"><%=title%>
      <a href="/knowledge/list?base_id=<%=baseId%>&base_title=<%=baseTitle%>" class="csdn-pagination ucfr"> < 返回列表 </a>
    </div></h2>
  </div>
	<div class="uc-inpli">
		<form class="form-horizontal" id="form1" method="get" name="form1" role="form" action="/knowledge/search" target='_blank'>
      <input type="hidden" name='domain' value="<%=baseTitle%>" />
      <input type="hidden" name='knowledge_id' value="<%=list.id%>" />
			<div class="form-group">
  				<label for="type" class="col-sm-2 control-label">知识点名称 : </label>
  				<div class="col-sm-10">
    				<input class="form-control" value="<%=list.name%>" placeholder="知识点名称" id="name" type="text" name="name">
				</div>
			</div>
			<div class="form-group">
  				<label class="col-sm-2 control-label">关键词 : </label>
  				<div class="col-sm-10">
            <textarea  class="form-control" id="keys" name="keys" placeholder="关键词"><%=list.key_words%></textarea>
            <div class="ucfl" style="color:red">多个关键词以逗号分隔</div>
            <input type="submit" class="form-control" value="查看数据结果" id="edit">
				</div>
			</div>
      <div class="form-group">

      </div>
			<div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="button" value="保存" class="btn btn-primary" id="edit" onclick="save('<%=baseId%>','<%=id%>')">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" >
          <hr style="height:1px;border:none;border-top:1px dashed #0066CC;" />
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="button" value="删除该知识点" class="btn btn-primary" id="del" onclick="delKnowledge('<%=list.id%>', '<%=title%>')">
        </div>
      </div>
		</form>
	</div>
</div>

<script type="text/javascript">
	$(function(){
    leftmenu_select(0, 0);
    if(<%=status%>){
      $("#del").hide();
    }
  });

	function save(baseId, id){
    var info = {};
    info.name = $('#name').val();
    info.keys = $('#keys').val();
    info.baseId = baseId;
    info.id = id;
    console.log(info);
    $.ajax({
        type: 'POST',
        url: '/knowledge/save',
        async: false,
        data: JSON.stringify(info),
        dataType: "json",
        contentType: "application/json;charset=utf-8",
        success: function (data) {
          if(data.err){
            alert(data.err+', 保存失败');
          }
          else{
            alert("保存数据成功!");
            location.href="/knowledge/list?base_id=<%=baseId%>&base_title=<%=baseTitle%>";
          }
        }
    });
	}

  function delKnowledge(id, title){
    var queren = confirm("确定删除该知识点？");
    if(queren==true){
      var info = {};
      info.id = id;
      info.title = title;

      $.ajax({
          type: 'POST',
          url: '/knowledge/del',
          async: false,
          data: JSON.stringify(info),
          dataType: "json",
          contentType: "application/json;charset=utf-8",
          success: function (data) {
            if(data.err){
              alert(data.err+', 删除失败');
            }
            else{
              alert("删除成功!");
              location.href="/knowledge/list?base_id=<%=baseId%>&base_title=<%=baseTitle%>";
            }
          }
      });
    }
  }
</script>