<div class="col-lg-10 col-md-9 ucbg-white">
	<div class="uc-inpli">
    	<h2><div class="uc-r-tit"><%=baseName%> > <%=knowledgeName%></div></h2>
  	</div>
  	<div class="uc-inpli">
  		<form class="form-horizontal" id="form1" method="get" name="form1" role="form" action="">
  			<input type="hidden" name='domain' value="<%=baseName%>" />
  			<input type="hidden" name='name' value="<%=knowledgeName%>" />
			<div class="form-group">
				<label for="type" class="col-sm-2 control-label">关键词 : </label>
				<div class="col-sm-10">
					<input class="form-control" value="<%=keys%>" placeholder="关键词" id="keys" type="text" name="keys">
					<div class="ucfl" style="color:red">多个关键词以逗号分隔</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" value="查询" class="btn btn-primary" id="edit">
		        </div>
		    </div>
		</form>
	</div>
	<div class="uc-inpli">
		<hr style="height:1px;border:none;border-top:1px dashed #0066CC;" />
	</div>
	<div class="uc-inpli">
		<div class="form-group">
			<div class="col-xs-10">
				<table class="table table-hover table-bordered" >
				<thead>
					<tr>
						<td width="100">全部内容: <%=list.count.total%></td>
              			<td width="80">文章: <%=list.count.article%></td>
              			<td width="80">视频: <%=list.count.video%></td>
              			<td width="80">文档: <%=list.count.doc%></td>
            			<td width="80">问答: <%=list.count.ask%></td>
            			<td width="80">代码: <%=list.count.code%></td>
					</tr>
				</thead>
				</table>
			</div>
		</div>
	</div>
	<div class="uc-inpli">
		<!--高级查询结束-->
		<table class="table table-hover table-bordered" id="itemlist">
			<thead>
        		<tr>
        			<th width="40">内容类型</th>
        			<th width="80">内容标题</th>
        		</tr>
        	</thead>
        	<tbody>
        		<% (list.data).forEach(function(d){ %>
        		<tr>
        			<th width="40"><%=d.object.dataType%></th>
        			<th width="80"><a href="<%=d.object.url%>" target="_Blank"><%=d.object.title%></a></th>
        		</tr>
        		<% }) %>
        	</tbody>
        </table>
        <div class="csdn-pagination ucfr">
            <%- partial('shared/partial-pager.ejs', {model: pageModel})%>
        </div>
    </div>
</div>
<script type="text/javascript">
	$(function(){
    	leftmenu_select(0, 0);
  	});
</script>