<script type="text/javascript" src="/javascripts/WdatePicker.js"></script>
<div class="col-lg-10 col-md-9 ucbg-white">
    <div class="uc-inpli">
    <form class="form-horizontal" id="form1" method="post" name="form1" role="form" action="/topic/sort">
        <input type="hidden" name='id' value="<%=topic.id%>">
        <h1 class="uc-r-tit"><%= base.name %>专题 > <%= topic.name %></h1>
        <div class="csdn-pagination ucfr">
                <h5><a href="#" onclick="add_content();">+ 添加内容</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="#" onclick='$("#form1").submit();'>保存排序</a></h5>
        </div>

        <div class="csdn-pagination ucfr">

            <table class="table table-hover table-bordered" id="itemlist">
                <thead>
                <tr>
                    <th width="10%">排序</th>
                    <th width="40%">内容</th>
                    <th>收录时间</th>
                    <th>类型</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody id="list_tbody">
                <% content_data.forEach(function(con){ %>
                <tr>
                    <td align="center"><class="uc-ico-id" target="_blank">
                        <input type="text" value="<%=con.sort%>" 
                            style="width: 50px; 
                            border: 0;
                            text-align: c;
                            text-align: center;
                        " name='sort[<%=con.content_id%>]'>
                    </td>
                    <td align="left" width="40%">
                        <a href="<%= con.url  %>" class="uc-ico-id"><%=con.title%></a>
                    </td>
                    <td align="center"><%= con.create_at %></td>
                    <td align="center"><%= con.content_type %></td>
                    <td align="center">
                        <a href="/topic/delete_content?content_id=<%=con.content_id  %>&topic_id=<%= topic.id %>">移除</a>
                    </td>
                <tr>
                    <%})%>
                </tbody>
            </table>
        </div>
    </form>
    </div>
</div>
<script>
    $(function(){
        leftmenu_select(2, 0);
    });
    function add_content(){
        document.location.href= '/topic/select?topic_id=<%= topic.id%>&base_id=<%= base.id %>'
    }

</script>